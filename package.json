{
   "name": "koa-ts-rest",
   "version": "1.0.0",
   "main": "index.js",
   "repository": "git@github.com:loicnestler/koa-ts-rest.git",
   "author": "Lo√Øc Nestler <loic.nestler@gmail.com>",
   "license": "MIT",
   "scripts": {
      "build": "tsc --outDir ./dist",
      "start": "node ./dist/app.js",
      "dev": "NODE_ENV=development tsc-watch --onSuccess \"node ./dist/app.js\"",
      "debug": "DEBUG=* NODE_ENV=development tsc-watch --onSuccess \"node ./dist/app.js\"",
      "test": "jest"
   },
   "husky": {
      "pre-commit": "npm test"
   },
   "jest": {
      "moduleFileExtensions": [
         "js",
         "json",
         "ts"
      ],
      "collectCoverage": true,
      "collectCoverageFrom": [
         "/src/**/*.{ts,js}",
         "!**/coverage/**"
      ],
      "transform": {
         "\\.ts$": "ts-jest"
      },
      "coverageThreshold": {
         "global": {
            "branches": 100,
            "functions": 100,
            "lines": 100,
            "statements": 100
         }
      },
      "coverageReporters": [
         "text",
         "text-summary"
      ],
      "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js|ts)x?$",
      "testPathIgnorePatterns": [
         "/node_modules/",
         "/dist/"
      ],
      "moduleNameMapper": {
         "@/(.*)$": "<rootDir>/src/$1"
      },
      "testEnvironment": "node"
   },
   "dependencies": {
      "@typegoose/typegoose": "^7.4.2",
      "bcrypt": "^5.0.0",
      "dotenv": "^8.2.0",
      "jsonwebtoken": "^8.5.1",
      "koa": "^2.13.0",
      "koa-joi-controllers": "^1.2.3",
      "koa-pino-logger": "^3.0.0",
      "koa-respond": "^2.1.0",
      "mongoose": "^5.11.1"
   },
   "devDependencies": {
      "@types/bcrypt": "^3.0.0",
      "@types/debug": "^4.1.5",
      "@types/faker": "^5.1.4",
      "@types/jest": "^26.0.16",
      "@types/joi": "^14.3.4",
      "@types/jsonwebtoken": "^8.5.0",
      "@types/koa": "^2.11.6",
      "@types/koa-joi-router": "^5.2.4",
      "@types/koa-logger": "^3.1.1",
      "@types/koa-pino-logger": "^3.0.0",
      "@types/mongoose": "^5.10.1",
      "@types/node": "^14.14.10",
      "@types/supertest": "^2.0.10",
      "debug": "^4.3.1",
      "faker": "^5.1.0",
      "husky": "^4.3.0",
      "jest": "^26.6.3",
      "koa-logger": "^3.2.1",
      "supertest": "^6.0.1",
      "ts-jest": "^26.4.4",
      "tsc-watch": "^4.2.9",
      "typescript": "^4.1.2"
   },
   "_moduleAliases": {
      "@": "dist",
      "@database": "dist/database",
      "@routes": "dist/routes",
      "@models": "dist/models",
      "@controllers": "dist/controllers",
      "@middlewares": "dist/middlewares",
      "@lib": "dist/lib",
      "@helpers": "dist/helpers"
   }
}
